{
  "name": "@findeth/networks",
  "version": "0.1.0",
  "description": "Library used by FindETH, which provides network functionality",
  "main": "lib/index.js",
  "repository": "https://github.com/FindETH/networks.git",
  "author": "Maarten Zuidhoorn <maarten@zuidhoorn.com>",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "engines": {
    "node": "12"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "yarn run clean && yarn run build:source && yarn run build:declarations",
    "build:source": "cross-env NODE_ENV=production babel src --extensions '.ts' --source-maps --out-dir lib",
    "build:declarations": "tsc -p tsconfig.build.json",
    "test": "jest",
    "lint": "yarn run lint:tsc && yarn run lint:tslint && yarn run lint:prettier",
    "lint:tsc": "tsc --noEmit",
    "lint:tslint": "tslint --project .",
    "lint:prettier": "prettier --check 'src/**/*.{ts,tsx}'",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'",
    "prepare": "yarn run build"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.0.0-beta.146",
    "@mycrypto/eth-scan": "^1.1.0"
  },
  "peerDependencies": {
    "bignumber.js": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.7.4",
    "@babel/runtime": "^7.7.6",
    "@types/jest": "^24.0.23",
    "babel-jest": "^24.9.0",
    "codecov": "^3.6.1",
    "core-js": "3",
    "cross-env": "^6.0.3",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-origin-ordered-imports-rule": "^1.2.2",
    "typescript": "^3.7.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --project . --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run lint && yarn run test"
    }
  }
}
